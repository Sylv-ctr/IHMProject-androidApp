<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="false"
    tools:showIn="@layout/activity_vue_detail"
    tools:context=".vueDetail">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Le réchauffement climatique"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:id="@+id/titreEvent"/>
    <TextView
        android:layout_below="@id/titreEvent"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quels enjeux pour demain"
        android:id="@+id/sousTitreEvent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/titreEvent"
        android:layout_alignTop="@id/titreEvent"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:text="26\nAVR"
        android:textStyle="bold"
        android:id="@+id/dateEvent"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#000000"
        android:layout_above="@id/typeEvent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sousTitreEvent"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:text="Conférence"
        android:textStyle="bold"
        android:id="@+id/typeEvent"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/typeEvent"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/filtre">





    </LinearLayout>



    <ImageView
        android:layout_below="@id/filtre"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/map"
        android:id="@+id/map"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#000000"
        android:layout_above="@id/map"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/map"
        android:layout_alignTop="@id/map"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:text="Amphi CCI Grenoble\n38000 Grenoble"
        android:textStyle="bold"
        android:id="@+id/addresseEvent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/addresseEvent"
        android:layout_alignTop="@id/map"
        android:layout_alignLeft="@id/dateEvent"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:text="16h"
        android:textStyle="bold"
        android:id="@+id/heureEvent"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#000000"
        android:layout_below="@id/map"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/map"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:text="Description de l'évènement"
        android:textStyle="bold"
        android:id="@+id/h1Event"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/h1Event"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:text="Venez vous informer des enjeux de l'écologie et de l'énergie solaire"
        android:id="@+id/descriptionEvent"/>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#000000"
        android:layout_below="@id/descriptionEvent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionEvent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:text="Contact"
        android:textStyle="bold"
        android:id="@+id/h1contactEvent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/h1contactEvent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:text="Jean-Pierre Chaix\nJP.Chaix@gmail.com\n06.04.34.65.23\nCompany : Veolia"
        android:id="@+id/contactEvent"/>

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fabParticiper"
        app:backgroundTint="@color/colorRed"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fav"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/contactEvent"/>





</RelativeLayout>
</ScrollView>